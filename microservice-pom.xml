<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>id.global</groupId>
        <artifactId>masterpom</artifactId>
        <version>36</version>
        <relativePath>master-pom.xml</relativePath>
    </parent>
    <version>10.3-SNAPSHOT</version>
    <artifactId>microservice-parent</artifactId>

    <packaging>pom</packaging>

    <name>GlobalID Microservice Parent POM</name>
    <description>Provides a base configuration for all GlobalID quarkus based microservices</description>
    <url>https://www.global.id</url>


    <scm>
        <connection>scm:git:git@gitlab.com:globalid/common/microservice-parent-pom.git</connection>
        <developerConnection>scm:git:git@gitlab.com:globalid/common/microservice-parent-pom.git</developerConnection>
        <url>https://gitlab.com/globalid/common/microservice-parent-pom</url>
        <tag>HEAD</tag>
    </scm>

    <properties>
        <!--<quarkus.native.builder-image>quay.io/quarkus/ubi-quarkus-native-image:21.1.0-java17</quarkus.native.builder-image>-->
        <quarkus.native.native-image-xmx>2g</quarkus.native.native-image-xmx>
        <!--quarkus.container-image.registry>715299534867.dkr.ecr.eu-central-1.amazonaws.com</quarkus.container-image.registry>
        <quarkus.container-image.insecure>true</quarkus.container-image.insecure-->
        <!--<quarkus.kubernetes.version>${project.version}</quarkus.kubernetes.version>-->
        <quarkus.container-image.group />
        <quarkus.container-image.insecure>true</quarkus.container-image.insecure>
        <!--<quarkus.native.additional-build-args>&#45;&#45;static</quarkus.native.additional-build-args>-->
        <maven.deploy.skip>true</maven.deploy.skip>
        <version.iris>6.1.1</version.iris>
        <version.globalid-common>3.3.1</version.globalid-common>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.iris-events</groupId>
                <artifactId>quarkus-iris</artifactId>
                <version>${version.iris}</version>
            </dependency>
            <dependency>
                <groupId>id.global.common</groupId>
                <artifactId>globalid-common</artifactId>
                <version>${version.globalid-common}</version>
            </dependency>
        </dependencies>


    </dependencyManagement>
    <dependencies>

        <!-- health endpoints -->
        <dependency>
            <groupId>io.quarkus</groupId>
            <artifactId>quarkus-smallrye-health</artifactId>
        </dependency>

        <dependency>
            <groupId>io.quarkus</groupId>
            <artifactId>quarkus-opentelemetry</artifactId>
        </dependency>

        <dependency>
            <groupId>io.opentelemetry.instrumentation</groupId>
            <artifactId>opentelemetry-jdbc</artifactId>
        </dependency>

        <!-- For log correlation -->
        <dependency>
            <groupId>io.quarkus</groupId>
            <artifactId>quarkus-logging-json</artifactId>
        </dependency>

        <!-- common test dependencies -->
        <dependency>
            <groupId>io.quarkus</groupId>
            <artifactId>quarkus-junit5</artifactId>
            <scope>test</scope>
        </dependency>

    </dependencies>
    <build>
        <finalName>${project.artifactId}</finalName>
        <plugins>
            <plugin>
                <groupId>io.quarkus</groupId>
                <artifactId>quarkus-maven-plugin</artifactId>
                <extensions>true</extensions>
                <executions>
                    <execution>
                        <goals>
                            <goal>build</goal>
                            <goal>generate-code</goal>
                            <goal>generate-code-tests</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.iris-events</groupId>
                    <artifactId>asyncapi-schema-generator-plugin</artifactId>
                    <version>${version.iris}</version>
                    <executions>
                        <execution>
                            <phase>process-classes</phase>
                            <goals>
                                <goal>generate-schema</goal>
                            </goals>
                        </execution>
                    </executions>
                    <configuration>
                        <scanDependenciesDisable>false</scanDependenciesDisable>
                        <annotationsArtifacts>
                            <annotationsArtifact>org.iris-events:iris-common</annotationsArtifact>
                        </annotationsArtifacts>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
    <profiles>
        <profile>
            <id>native</id>
            <activation>
                <property>
                    <name>native</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-failsafe-plugin</artifactId>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>integration-test</goal>
                                    <goal>verify</goal>
                                </goals>
                                <configuration>
                                    <systemPropertyVariables>
                                        <native.image.path>${project.build.directory}/${project.build.finalName}-runner</native.image.path>
                                        <java.util.logging.manager>org.jboss.logmanager.LogManager</java.util.logging.manager>
                                        <maven.home>${maven.home}</maven.home>
                                    </systemPropertyVariables>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
            <properties>
                <quarkus.package.type>native</quarkus.package.type>
            </properties>
        </profile>
        <profile>
            <id>generate-schema</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.iris-events</groupId>
                        <artifactId>asyncapi-schema-generator-plugin</artifactId>
                        <configuration>
                            <apicurioArtifactId>${project.artifactId}</apicurioArtifactId>
                            <apicurioRegistryUrl>https://schema.tools.global.id</apicurioRegistryUrl>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>upload-schema</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.iris-events</groupId>
                        <artifactId>asyncapi-schema-generator-plugin</artifactId>
                        <configuration>
                            <apicurioArtifactId>${project.artifactId}</apicurioArtifactId>
                            <apicurioRegistryUrl>https://schema.tools.global.id</apicurioRegistryUrl>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>